            }
        }

        // Función para animar elementos al hacer scroll
        function animateOnScroll() {
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -100px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Agregar un pequeño delay antes de mostrar
                        setTimeout(() => {
                            entry.target.classList.add('visible');
                        }, 100);
                    } else {
                        // Remover inmediatamente al salir del viewport
                        entry.target.classList.remove('visible');
                    }
                });
            }, observerOptions);

            // Observar el título
            const title = document.querySelector('.benefits-title');
            if (title) observer.observe(title);

            // Observar las tarjetas de timeline
            const timelineItems = document.querySelectorAll('.timeline-content');
            timelineItems.forEach((item, index) => {
                observer.observe(item);
                // Agregar delay escalonado más pronunciado
                item.style.transitionDelay = `${index * 0.2}s`;
            });
        }

        // Función específica para animar timeline con efectos de scroll
        function animateTimelineOnScroll() {
            const timelineObserverOptions = {
                threshold: 0.3,
                rootMargin: '0px 0px -50px 0px'
            };

            const timelineObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Agregar delay escalonado para efecto dramático
                        const index = Array.from(entry.target.parentNode.parentNode.children).indexOf(entry.target.parentNode);
                        setTimeout(() => {
                            entry.target.classList.add('scroll-active');
                            entry.target.parentNode.classList.add('scroll-active');
                        }, index * 200);
                    } else {
                        // Remover efectos al salir del viewport
                        entry.target.classList.remove('scroll-active');
                        entry.target.parentNode.classList.remove('scroll-active');
                    }
                });
            }, timelineObserverOptions);

            // Observar elementos de timeline
            const timelineContents = document.querySelectorAll('.timeline-content');
            timelineContents.forEach(item => {
                timelineObserver.observe(item);
            });
        }

