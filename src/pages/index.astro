                        scale: 1.5,
                        duration: 0.3,
                        ease: "power2.out"
                    });
                });

                element.addEventListener('mouseleave', () => {
                    gsap.to(logoMask, {
                        scale: 1,
                        duration: 0.3,
                        ease: "power2.out"
                    });
                    
                    gsap.to(logoImg, {
                        rotation: 0,
                        duration: 0.4,
                        ease: "power2.out"
                    });

                    gsap.to(logoParticles, {
                        scale: 1,
                        duration: 0.3,
                        ease: "power2.out"
                    });
