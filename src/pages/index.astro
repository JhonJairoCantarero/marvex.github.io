                console.error('❌ No se encontraron elementos .space-item');
                return;
            }
            
            let currentSpaceIndex = 0;
            let autoInterval = null;
            const totalSpaces = spaceItems.length;

            function showSpace(index) {
                console.log('🎯 Mostrando espacio:', index);
                
                // Encontrar el elemento actualmente activo
                const currentActive = document.querySelector('.space-item.active');
                
                // Si hay un elemento activo, agregar animación de salida
                if (currentActive && currentActive !== spaceItems[index]) {
                    currentActive.classList.add('exiting');
                    currentActive.classList.remove('active');
                    
                    // Remover la clase exiting después de la animación
                    setTimeout(() => {
                        currentActive.classList.remove('exiting', 'prev', 'next');
                    }, 600);
                }
                
                // Limpiar todas las clases de todos los elementos
                spaceItems.forEach(item => {
                    item.classList.remove('active', 'prev', 'next', 'entering', 'exiting');
                });

                // Agregar animación de entrada al nuevo elemento
                spaceItems[index].classList.add('entering');
                
                // Después de un pequeño delay, activar el elemento
                setTimeout(() => {
                    spaceItems[index].classList.remove('entering');
                    spaceItems[index].classList.add('active');
                }, 100);

                // Configurar elementos prev y next para efectos de transición
                const prevIndex = (index - 1 + totalSpaces) % totalSpaces;
                const nextIndex = (index + 1) % totalSpaces;
                
                spaceItems[prevIndex].classList.add('prev');
                spaceItems[nextIndex].classList.add('next');
            }

            function nextSpace() {
                currentSpaceIndex = (currentSpaceIndex + 1) % totalSpaces;
                showSpace(currentSpaceIndex);
            }

            function startAuto() {
                console.log('🚀 Iniciando auto-play de espacios...');
                if (autoInterval) clearInterval(autoInterval);
                autoInterval = setInterval(() => {
                    nextSpace();
                }, 3000); // Cambiar cada 3 segundos
