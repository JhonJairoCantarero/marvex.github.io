        // Carrusel infinito con clones y transición suave
        const carouselTrack = document.getElementById('carouselTrack');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const dots = document.querySelectorAll('.carousel-dot');
        const items = carouselTrack.querySelectorAll('.carousel-item');
        let currentIndex = 0;
        const totalItems = items.length;
        let autoInterval = null;
        let isTransitioning = false;

        // Crear clones para el efecto infinito
        function createInfiniteCarousel() {
            // Clonar elementos al final
            items.forEach(item => {
                const clone = item.cloneNode(true);
                carouselTrack.appendChild(clone);
            });
            // Clonar elementos al inicio
            items.forEach(item => {
                const clone = item.cloneNode(true);
                carouselTrack.insertBefore(clone, carouselTrack.firstChild);
            });
            // Ajustar el índice inicial para considerar los clones
            currentIndex = totalItems;
            updateCarousel();
        }

        function updateCarousel() {
            const allItems = carouselTrack.querySelectorAll('.carousel-item');
            allItems.forEach((item, idx) => {
                item.classList.remove('active', 'left', 'right', 'far-left', 'far-right');
                if (idx === currentIndex) {
                    item.classList.add('active');
                } else if (idx === currentIndex - 1) {
                    item.classList.add('left');
                } else if (idx === currentIndex + 1) {
                    item.classList.add('right');
                } else if (idx === currentIndex - 2) {
                    item.classList.add('far-left');
                } else if (idx === currentIndex + 2) {
                    item.classList.add('far-right');
                }
            });
            // Calcular la posición del carrusel para centrar el elemento activo
            const gap = window.innerWidth <= 480 ? 15 : window.innerWidth <= 768 ? 20 : 30; // Gap responsivo
            const itemWidth = allItems[0].offsetWidth + gap;
            const centerOffset = (carouselTrack.offsetWidth / 2) - (itemWidth / 2);
            const translateX = centerOffset - (currentIndex * itemWidth);
            carouselTrack.style.transform = `translateX(${translateX}px)`;
            // Actualizar dots (solo para los elementos originales)
            const originalIndex = currentIndex - totalItems;
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === originalIndex);
            });
        }

        function nextSlide() {
            if (isTransitioning) return;
            isTransitioning = true;
            currentIndex++;
            updateCarousel();
            // Si llegamos al final de los clones, saltar al inicio real sin transición visible
            if (currentIndex >= totalItems * 2) {
                setTimeout(() => {
                    carouselTrack.style.transition = 'none';
                    currentIndex = totalItems;
                    updateCarousel();
                    setTimeout(() => {
                        carouselTrack.style.transition = 'transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                        isTransitioning = false;
                    }, 50);
                }, 300);
            } else {
                setTimeout(() => {
                    isTransitioning = false;
                }, 300);
            }
        }

        function prevSlide() {
            if (isTransitioning) return;
            isTransitioning = true;
            currentIndex--;
            updateCarousel();
            // Si llegamos al inicio de los clones, saltar al final real sin transición visible
            if (currentIndex < 0) {
                setTimeout(() => {
                    carouselTrack.style.transition = 'none';
                    currentIndex = totalItems * 2 - 1;
                    updateCarousel();
                    setTimeout(() => {
                        carouselTrack.style.transition = 'transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                        isTransitioning = false;
                    }, 50);
                }, 300);
            } else {
                setTimeout(() => {
                    isTransitioning = false;
                }, 300);
            }
        }

        prevBtn.addEventListener('click', () => {
            prevSlide();
            restartAuto();
        });

        nextBtn.addEventListener('click', () => {
            nextSlide();
            restartAuto();
        });

        // Ajustar carrusel cuando cambie el tamaño de la ventana
        window.addEventListener('resize', () => {
