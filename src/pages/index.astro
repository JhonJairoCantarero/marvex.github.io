        .particle:nth-child(17) { left: 37%; top: 92%; animation-delay: 1.3s; }
        .particle:nth-child(18) { left: 59%; top: 18%; animation-delay: 2.5s; }
        .particle:nth-child(19) { left: 81%; top: 22%; animation-delay: 3.7s; }
        .particle:nth-child(20) { left: 3%; top: 35%; animation-delay: 0.7s; }
        .particle:nth-child(21) { left: 25%; top: 58%; animation-delay: 1.9s; }
        .particle:nth-child(22) { left: 47%; top: 42%; animation-delay: 3.1s; }
        .particle:nth-child(23) { left: 69%; top: 35%; animation-delay: 0.2s; }
