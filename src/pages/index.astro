        carouselTrack.addEventListener('touchend', (e) => {
            endX = e.changedTouches[0].clientX;
            const diffX = startX - endX;
            
            if (Math.abs(diffX) > 50) { // Mínimo swipe de 50px
                if (diffX > 0) {
                    nextSlide();
                    restartAuto();
                } else {
                    prevSlide();
                    restartAuto();
                }
            }
        });

        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                if (isTransitioning) return;
                // Calcular cuántos pasos necesitamos para llegar al índice deseado
                const currentOriginalIndex = currentIndex - totalItems;
                let stepsToMove = index - currentOriginalIndex;
                if (stepsToMove < 0) {
                    stepsToMove += totalItems;
                }
                for (let i = 0; i < stepsToMove; i++) {
                    setTimeout(() => {
                        nextSlide();
                    }, i * 100);
                }
                restartAuto();
            });
        });

        function startAuto() {
            if (autoInterval) clearInterval(autoInterval);
            autoInterval = setInterval(() => {
                nextSlide();
            }, 4000);
        }

