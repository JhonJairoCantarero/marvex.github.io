        .particle:nth-child(44) { left: 33%; top: 15%; animation-delay: 1.5s; }
        .particle:nth-child(45) { left: 55%; top: 82%; animation-delay: 2.7s; }
        .particle:nth-child(46) { left: 77%; top: 55%; animation-delay: 3.9s; }
