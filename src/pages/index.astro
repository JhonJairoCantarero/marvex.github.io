    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Portfolio text animation
            const portfolioButtons = document.querySelectorAll('.portfolio-cta-button');
            const portfolioInfo = document.querySelector('.portfolio-info-content');
            let isTextVisible = true;

            portfolioButtons.forEach(button => {
                button.addEventListener('click', () => {
                    if (isTextVisible) {
                        portfolioInfo.classList.add('hidden');
                    } else {
                        portfolioInfo.classList.remove('hidden');
                    }
                    isTextVisible = !isTextVisible;
                });
            });

            // Spaces transition animation
            const spaceItems = document.querySelectorAll('.space-item');
            let currentIndex = 0;
            const transitionDelay = 5000; // 5 segundos entre cada transición

            function showNextSpace() {
                // Remover clases de todos los elementos
                spaceItems.forEach(item => {
                    item.classList.remove('active', 'prev', 'next', 'entering', 'exiting');
                });

                // Determinar el índice anterior y siguiente
                const prevIndex = (currentIndex - 1 + spaceItems.length) % spaceItems.length;
                const nextIndex = (currentIndex + 1) % spaceItems.length;

                // Agregar las clases correspondientes
                spaceItems[prevIndex].classList.add('prev');
                spaceItems[currentIndex].classList.add('active', 'entering');
                spaceItems[nextIndex].classList.add('next');

                // Actualizar los puntos de navegación si existen
                const dots = document.querySelectorAll('.space-dot');
                if (dots.length) {
                    dots.forEach((dot, index) => {
                        dot.classList.toggle('active', index === currentIndex);
                    });
                }

                // Preparar la siguiente transición
                currentIndex = (currentIndex + 1) % spaceItems.length;
            }

            // Mostrar el primer elemento inmediatamente
            showNextSpace();

            // Iniciar el ciclo automático
            setInterval(showNextSpace, transitionDelay);

            // Funcionalidad de los puntos de navegación
            const spaceDots = document.querySelectorAll('.space-dot');
            spaceDots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    currentIndex = index;
                    showNextSpace();
                });
            });
        });
    </script>
