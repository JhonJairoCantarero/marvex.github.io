    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--color-bg);
            color: var(--color-dark);
            overflow-x: hidden;
            cursor: default;
        }


        /* Loader dramático */
        .loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            transition: all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .loader.hidden {
            opacity: 0;
            transform: scale(1.1);
        }

        .loader-animation {
            width: 300px;
            height: 200px;
            filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.8));
        }



        /* Hero Section con video/background dinámico */
        .hero-section {
            position: relative;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/src/assets/porci.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            filter: brightness(0.7) contrast(1.2);
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.8) 100%);
            z-index: 1;
        }

        /* Partículas flotantes */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 2;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            box-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
        }

        /* Diferentes animaciones de flotación hacia arriba */
        .particle:nth-child(odd) {
            animation: particleFloatUp1 8s ease-out infinite;
        }

        .particle:nth-child(even) {
            animation: particleFloatUp2 10s ease-out infinite;
        }

        .particle:nth-child(3n) {
            animation: particleFloatUp3 12s ease-out infinite;
        }

        .particle:nth-child(4n) {
            animation: particleFloatUp4 9s ease-out infinite;
        }

        .particle:nth-child(5n) {
            animation: particleFloatUp5 11s ease-out infinite;
        }

        /* Partículas con colores diferentes */
        .particle:nth-child(3n) {
            background: rgba(230, 126, 34, 0.8);
            box-shadow: 0 0 8px rgba(230, 126, 34, 0.6);
        }

        .particle:nth-child(5n) {
            background: rgba(52, 152, 219, 0.8);
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.6);
        }

        .particle:nth-child(7n) {
            background: rgba(155, 89, 182, 0.8);
            box-shadow: 0 0 8px rgba(155, 89, 182, 0.6);
        }

        /* Posiciones aleatorias y delays optimizados para flotación continua */
        .particle:nth-child(1) { left: 8%; top: 15%; animation-delay: 0s; }
        .particle:nth-child(2) { left: 23%; top: 8%; animation-delay: 1.2s; }
        .particle:nth-child(3) { left: 45%; top: 25%; animation-delay: 2.4s; }
        .particle:nth-child(4) { left: 67%; top: 12%; animation-delay: 0.6s; }
        .particle:nth-child(5) { left: 89%; top: 30%; animation-delay: 1.8s; }
        .particle:nth-child(6) { left: 12%; top: 45%; animation-delay: 3s; }
        .particle:nth-child(7) { left: 34%; top: 38%; animation-delay: 0.3s; }
        .particle:nth-child(8) { left: 56%; top: 52%; animation-delay: 1.5s; }
        .particle:nth-child(9) { left: 78%; top: 48%; animation-delay: 2.7s; }
        .particle:nth-child(10) { left: 91%; top: 65%; animation-delay: 0.9s; }
