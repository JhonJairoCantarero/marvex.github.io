        // Animación del logo flotante con GSAP
        function initFloatingLogo() {
            const floatingLogo = document.getElementById('floatingLogo');
            const logoMask = floatingLogo.querySelector('.logo-mask');
            const logoImg = floatingLogo.querySelector('img');
            const logoParticles = document.getElementById('logoParticles');
            
            // Crear partículas
            function createParticles() {
                for (let i = 0; i < 8; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'logo-particle';
                    particle.style.setProperty('--x', `${(Math.random() - 0.5) * 100}px`);
                    particle.style.setProperty('--y', `${(Math.random() - 0.5) * 100}px`);
                    particle.style.animationDelay = `${Math.random() * 3}s`;
                    logoParticles.appendChild(particle);
                }
            }
            
            createParticles();
            
            // Mostrar el logo con animación GSAP
            gsap.set(floatingLogo, { opacity: 0, scale: 0.5 });
            gsap.to(floatingLogo, {
                opacity: 1,
                scale: 1,
                duration: 1,
                ease: "back.out(1.7)",
                onComplete: () => {
                    floatingLogo.classList.remove('hidden');
                    floatingLogo.classList.add('visible');
                }
            });

            // Variables para el seguimiento del mouse
            let mouseX = 0;
            let mouseY = 0;
            let logoX = 0;
            let logoY = 0;
            let isMouseMoving = false;
            let mouseTimer = null;
            let lastMouseX = 0;
            let lastMouseY = 0;
            let mouseVelocity = 0;

            // Seguimiento del mouse
            document.addEventListener('mousemove', (e) => {
                mouseX = e.clientX;
                mouseY = e.clientY;
                
                // Calcular velocidad del mouse
                const deltaX = mouseX - lastMouseX;
                const deltaY = mouseY - lastMouseY;
                mouseVelocity = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
                
                lastMouseX = mouseX;
                lastMouseY = mouseY;
                
                isMouseMoving = true;
                
                // Mostrar el logo cuando el mouse se mueve
                if (floatingLogo.classList.contains('hidden')) {
                    gsap.to(floatingLogo, {
                        opacity: 1,
                        scale: 1,
                        duration: 0.5,
                        ease: "power2.out"
                    });
                    floatingLogo.classList.remove('hidden');
                    floatingLogo.classList.add('visible');
                }

                // Resetear el timer
                if (mouseTimer) clearTimeout(mouseTimer);
                mouseTimer = setTimeout(() => {
                    isMouseMoving = false;
                    // Ocultar el logo después de 2 segundos sin movimiento
                    gsap.to(floatingLogo, {
                        opacity: 0,
                        scale: 0.8,
                        duration: 0.8,
                        ease: "power2.in",
                        onComplete: () => {
                            floatingLogo.classList.add('hidden');
                            floatingLogo.classList.remove('visible');
                        }
                    });
                }, 2000);

                // Animar la máscara del logo basado en la velocidad
                const scale = Math.min(1.2 + (mouseVelocity * 0.01), 1.5);
                gsap.to(logoMask, {
                    scale: scale,
                    duration: 0.3,
                    ease: "power2.out"
                });

                // Efecto de rotación suave basado en la dirección del mouse
                const rotation = (deltaX * 0.5) + (deltaY * 0.3);
                gsap.to(logoImg, {
                    rotation: rotation,
                    duration: 0.5,
                    ease: "power2.out"
                });

                // Efecto de brillo en la máscara
                gsap.to(logoMask, {
                    boxShadow: `0 0 ${30 + mouseVelocity * 0.5}px rgba(230, 126, 34, 0.5)`,
                    duration: 0.3,
                    ease: "power2.out"
                });
            });

            // Animación suave del logo siguiendo el cursor
            function animateLogo() {
                // Interpolación suave para el seguimiento
                logoX += (mouseX - logoX) * 0.1;
                logoY += (mouseY - logoY) * 0.1;

                gsap.set(floatingLogo, {
                    x: logoX - 40, // Centrar el logo en el cursor
                    y: logoY - 40
                });

                // Efecto de escala basado en la velocidad del mouse
                if (isMouseMoving) {
                    const scale = Math.min(1.1 + (mouseVelocity * 0.005), 1.3);
                    gsap.to(logoMask, {
                        scale: scale,
                        duration: 0.2,
                        ease: "power2.out"
                    });
                } else {
                    gsap.to(logoMask, {
                        scale: 1,
                        duration: 0.3,
                        ease: "power2.out"
                    });
                }

                requestAnimationFrame(animateLogo);
