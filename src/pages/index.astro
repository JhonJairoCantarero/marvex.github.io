        .particle:nth-child(49) { left: 43%; top: 32%; animation-delay: 3s; }
        .particle:nth-child(50) { left: 65%; top: 78%; animation-delay: 0.2s; }

        /* Animaciones de flotación hacia arriba con desvanecimiento */
        @keyframes particleFloatUp1 {
            0% {
                transform: translateY(100vh) translateX(0px) scale(0.8);
                opacity: 0;
            }
            10% {
                opacity: 0.6;
                transform: translateY(90vh) translateX(5px) scale(1);
            }
            50% {
                opacity: 1;
                transform: translateY(50vh) translateX(-3px) scale(1.1);
            }
            80% {
                opacity: 0.4;
                transform: translateY(20vh) translateX(2px) scale(0.9);
            }
            100% {
                transform: translateY(-10vh) translateX(0px) scale(0.6);
                opacity: 0;
            }
        }

        @keyframes particleFloatUp2 {
            0% {
                transform: translateY(105vh) translateX(0px) scale(0.7);
                opacity: 0;
            }
            15% {
                opacity: 0.5;
                transform: translateY(85vh) translateX(-8px) scale(0.9);
            }
            40% {
                opacity: 0.9;
                transform: translateY(60vh) translateX(6px) scale(1.2);
            }
            70% {
                opacity: 0.6;
                transform: translateY(30vh) translateX(-4px) scale(1);
            }
            90% {
                opacity: 0.2;
                transform: translateY(10vh) translateX(3px) scale(0.8);
            }
            100% {
                transform: translateY(-15vh) translateX(0px) scale(0.5);
                opacity: 0;
            }
        }

        @keyframes particleFloatUp3 {
            0% {
                transform: translateY(110vh) translateX(0px) scale(0.6);
                opacity: 0;
            }
            20% {
                opacity: 0.4;
                transform: translateY(80vh) translateX(10px) scale(0.8);
            }
            45% {
                opacity: 0.8;
                transform: translateY(55vh) translateX(-7px) scale(1.1);
            }
            75% {
                opacity: 0.5;
                transform: translateY(25vh) translateX(5px) scale(0.9);
            }
            95% {
                opacity: 0.1;
                transform: translateY(5vh) translateX(-2px) scale(0.7);
            }
            100% {
                transform: translateY(-20vh) translateX(0px) scale(0.4);
                opacity: 0;
            }
        }

        @keyframes particleFloatUp4 {
            0% {
                transform: translateY(95vh) translateX(0px) scale(0.9);
                opacity: 0;
            }
            12% {
                opacity: 0.7;
                transform: translateY(88vh) translateX(-6px) scale(1.1);
            }
            35% {
                opacity: 1;
                transform: translateY(65vh) translateX(8px) scale(1.3);
            }
            65% {
                opacity: 0.7;
                transform: translateY(35vh) translateX(-5px) scale(1);
            }
            85% {
                opacity: 0.3;
                transform: translateY(15vh) translateX(4px) scale(0.8);
            }
            100% {
                transform: translateY(-5vh) translateX(0px) scale(0.6);
                opacity: 0;
            }
        }

        @keyframes particleFloatUp5 {
            0% {
                transform: translateY(100vh) translateX(0px) scale(0.5);
                opacity: 0;
            }
            18% {
                opacity: 0.6;
                transform: translateY(82vh) translateX(7px) scale(0.8);
            }
            38% {
                opacity: 0.9;
                transform: translateY(62vh) translateX(-9px) scale(1.2);
            }
            68% {
                opacity: 0.6;
                transform: translateY(32vh) translateX(6px) scale(1);
            }
            88% {
                opacity: 0.2;
                transform: translateY(12vh) translateX(-3px) scale(0.7);
            }
            100% {
                transform: translateY(-8vh) translateX(0px) scale(0.4);
                opacity: 0;
            }
        }

        /* Contenido principal */
        .hero-content {
            position: relative;
            z-index: 3;
            text-align: center;
            max-width: 1200px;
            padding: 0 20px;
        }

        .hero-title {
            font-size: clamp(1.5rem, 4vw, 3.5rem);
            font-weight: 300;
            background: linear-gradient(45deg, #fff, #f0f0f0, #fff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(50px);
            animation: titleSlideIn 1.5s ease-out 0.5s forwards;
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            letter-spacing: 1px;
        }

        @keyframes titleSlideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .marvex-brand {
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateY(30px);
            animation: marvexSlideIn 1.5s ease-out 0.2s forwards;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .marvex-text {
            height: clamp(3.5rem, 7vw, 5.5rem);
            width: auto;
            max-width: 100%;
            object-fit: contain;
            filter: drop-shadow(0 0 20px rgba(255, 193, 7, 0.5));
            animation: marvexGlow 3s ease-in-out infinite;
        }

        @keyframes marvexGlow {
            0% {
                filter: drop-shadow(0 0 20px rgba(255, 193, 7, 0.5));
                transform: scale(1);
            }
            50% {
                filter: drop-shadow(0 0 30px rgba(255, 193, 7, 0.8));
                transform: scale(1.02);
            }
            100% {
                filter: drop-shadow(0 0 20px rgba(255, 193, 7, 0.5));
                transform: scale(1);
            }
        }


        @keyframes marvexSlideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


        .marvex-favicon {
            width: clamp(40px, 6vw, 60px);
            height: clamp(40px, 6vw, 60px);
            display: inline-block;
            margin-left: clamp(4px, 0.8vw, 8px);
            position: relative;
            filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.8)) drop-shadow(0 0 40px rgba(248, 249, 250, 0.6));
            transform: rotate(-5deg) perspective(200px) rotateY(-30deg) translateY(-10px);
            transform-style: preserve-3d;
            animation: faviconRotate3D 6s ease-out infinite;
        }

        @keyframes faviconRotate3D {
            0% {
                transform: rotate(-5deg) perspective(200px) rotateY(-30deg) translateY(-10px) rotateY(0deg);
            }
            100% {
                transform: rotate(-5deg) perspective(200px) rotateY(-30deg) translateY(-10px) rotateY(1440deg);
            }
        }


        .hero-subtitle {
            font-size: clamp(0.75rem, 1.8vw, 1.2rem);
            color: #D1A770;
            margin-bottom: 3rem;
            opacity: 0;
            transform: translateY(30px);
            animation: subtitleSlideIn 1.5s ease-out 1s forwards;
            font-weight: 400;
            letter-spacing: 0.5px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        @keyframes subtitleSlideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


        /* Botones dramáticos */
        .cta-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
            opacity: 0;
            transform: translateY(30px);
            animation: buttonsSlideIn 1.5s ease-out 1.5s forwards;
        }

        @keyframes buttonsSlideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn-primary {
            background: linear-gradient(45deg, #D1A770, #B88749);
            color: white;
            padding: 1rem 2rem;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 600;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 10px 30px rgba(209, 167, 112, 0.4);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 20px 40px rgba(209, 167, 112, 0.6);
        }

        .btn-secondary {
            background: transparent;
            color: white;
            padding: 0.875rem 1.75rem;
            font-size: 0.8rem;
            font-weight: 400;
            border: 3px solid white;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

        .btn-secondary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: white;
            transition: left 0.3s ease;
            z-index: -1;
        }

        .btn-secondary:hover::before {
            left: 0;
        }

        .btn-secondary:hover {
            color: #000;
            transform: translateY(-5px) scale(1.05);
        }

        /* Sección de Beneficios - Línea de Tiempo */
        .benefits-section {
            background: white;
            padding: 40px 20px;
            text-align: center;
            position: relative;
        }

        .benefits-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%232c3e50" opacity="0.02"/><circle cx="75" cy="75" r="1" fill="%232c3e50" opacity="0.02"/><circle cx="50" cy="10" r="0.5" fill="%232c3e50" opacity="0.01"/><circle cx="10" cy="60" r="0.5" fill="%232c3e50" opacity="0.01"/><circle cx="90" cy="40" r="0.5" fill="%232c3e50" opacity="0.01"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            pointer-events: none;
        }

        .benefits-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--color-dark);
            margin-bottom: 16px;
            letter-spacing: 0.5px;
            position: relative;
            z-index: 2;
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s ease;
        }

        .benefits-title.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .benefits-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #e67e22, #f39c12);
            border-radius: 2px;
        }

        .timeline-container {
            position: relative;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px 0;
        }

        .timeline-line {
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 3px;
            background: linear-gradient(180deg, #D1A770, #B88749, #D1A770);
            transform: translateX(-50%);
            border-radius: 2px;
            box-shadow: 0 0 15px rgba(209, 167, 112, 0.4);
            transition: all 0.3s ease;
        }

        .timeline-item:hover .timeline-line {
            width: 8px;
            box-shadow: 0 0 40px rgba(209, 167, 112, 0.8);
            background: linear-gradient(180deg, #B88749, #D1A770, #B88749);
            animation: lineGlow 0.8s ease-in-out;
        }

        .timeline-container:hover .timeline-content:not(:hover) {
            opacity: 0.6;
            transform: scale(0.95);
        }

        /* Efectos de scroll - elementos visibles se agrandan */
        .timeline-content.scroll-active {
            opacity: 1;
            transform: translateX(0) scale(1.02);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15), 0 5px 15px rgba(209, 167, 112, 0.2);
            border-color: #D1A770;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }

        .timeline-content.scroll-active .timeline-icon {
            transform: translateY(-50%) scale(1.15);
            box-shadow: 0 8px 20px rgba(209, 167, 112, 0.4);
            background: linear-gradient(135deg, #B88749, #D1A770);
        }

        .timeline-content.scroll-active .timeline-text h3 {
            color: #D1A770;
            transform: translateX(5px) scale(1.01);
            text-shadow: 0 2px 4px rgba(209, 167, 112, 0.2);
        }

        .timeline-content.scroll-active .timeline-text p {
            color: #555;
            transform: translateX(5px);
