---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  priority?: boolean;
  [key: string]: any; // Permitir atributos adicionales como data-product
}

const { src, alt, class: className = '', loading = 'lazy', priority = false, ...rest } = Astro.props;
---

<img
  src={src}
  alt={alt}
  class={className}
  loading={loading}
  decoding="async"
  fetchpriority={priority ? 'high' : 'auto'}
  style="width:100%; height:100%; object-fit:contain; object-position:center; display:block; transform:translateZ(0); will-change:transform;"
  {...rest}
/> 
