---
import marvexLogo from '../assets/MARVEX.png';

export interface Props {
  class?: string;
  alt?: string;
}

const { class: className = '', alt = 'Marvex Logo' } = Astro.props;

// Determinar el estilo seg√∫n la clase
let style = "max-width: 100%; height: auto;";
if (className.includes('loader-logo')) {
  style = "max-width: 200px; max-height: 200px;";
} else if (className.includes('footer-logo')) {
  style = "max-width: 80px;";
} else if (className.includes('floating-logo-img')) {
  style = "width: 80px; height: 80px; object-fit: contain;";
}
---

<img src={marvexLogo.src} alt={alt} class={className} style={style} />
