    // Configurar cliente de Supabase
    const supabaseUrl = 'https://wsyzglahgrbfdvrsriah.supabase.co';
    const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6IndzeXpnbGFoZ3JiZmR2cnNyaWFoIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTEyNTM0MzYsImV4cCI6MjA2NjgyOTQzNn0.zoxd3Z87C8nyU5H0fp0AJyO4Klp9uf_KmkvJAtOMAhY';
    const supabase = createClient(supabaseUrl, supabaseKey);

    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('cotizacionModal');
        const closeBtn = document.getElementById('closeModal');
        const form = document.getElementById('cotizacionForm');
        const submitBtn = form.querySelector('.form-submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        const formSuccess = document.getElementById('formSuccess');

        // Función para abrir el formulario de pantalla completa
        window.openCotizacionModal = function() {
            modal.style.display = 'flex';
            setTimeout(() => {
                modal.classList.add('show');
            }, 10);
            document.body.style.overflow = 'hidden';
            
            // Scroll suave al inicio
            setTimeout(() => {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }, 100);
        };

        // Función para cerrar el formulario
        window.closeModal = function() {
            modal.classList.remove('show');
            setTimeout(() => {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
                // Resetear formulario
                form.reset();
                form.style.display = 'block';
                formSuccess.style.display = 'none';
                btnText.style.display = 'flex';
                btnLoading.style.display = 'none';
                submitBtn.disabled = false;
                
                // Limpiar validaciones
                const inputs = form.querySelectorAll('input, select, textarea');
                inputs.forEach(input => {
                    input.classList.remove('valid', 'error');
                    const feedback = document.getElementById(input.name + '-feedback');
                    if (feedback) {
                        feedback.textContent = '';
                        feedback.className = 'form-feedback';
                    }
                });
            }, 400);
        }

        // Event listeners
        closeBtn.addEventListener('click', closeModal);
        
        // Cerrar con tecla ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && modal.classList.contains('show')) {
                closeModal();
            }
        });

        // Validación en tiempo real mejorada
        function validateField(field) {
            const value = field.value.trim();
            const feedback = document.getElementById(field.name + '-feedback');
            
            if (field.hasAttribute('required') && !value) {
                field.classList.remove('valid');
                field.classList.add('error');
                if (feedback) {
                    feedback.textContent = 'Este campo es requerido';
                    feedback.className = 'form-feedback error';
                }
                return false;
            }
            
            // Validaciones específicas mejoradas
            let isValid = true;
            let message = '';
            
            switch (field.name) {
                case 'nombre':
                    if (value && value.length < 2) {
                        isValid = false;
                        message = 'El nombre debe tener al menos 2 caracteres';
                    } else if (value && !/^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$/.test(value)) {
                        isValid = false;
                        message = 'El nombre solo puede contener letras y espacios';
                    }
                    break;
                case 'telefono':
                    const phoneRegex = /^[+]?[0-9\s\-\(\)]{8,15}$/;
                    if (value && !phoneRegex.test(value)) {
                        isValid = false;
                        message = 'Formato de teléfono inválido (8-15 dígitos)';
                    }
                    break;
                case 'cantidad':
                    if (value && (isNaN(value) || parseInt(value) < 1 || parseInt(value) > 10000)) {
                        isValid = false;
                        message = 'Debe ser un número entre 1 y 10,000';
                    }
                    break;
                case 'ciudad':
                    if (value && value.length < 2) {
                        isValid = false;
                        message = 'La ciudad debe tener al menos 2 caracteres';
                    }
                    break;
                case 'departamento':
                    if (value === '') {
                        isValid = false;
                        message = 'Por favor selecciona un departamento';
                    }
                    break;
            }
            
            if (isValid && value) {
                field.classList.remove('error');
                field.classList.add('valid');
                if (feedback) {
                    feedback.textContent = '✓ Válido';
                    feedback.className = 'form-feedback success';
                }
            } else if (!isValid) {
                field.classList.remove('valid');
                field.classList.add('error');
                if (feedback) {
                    feedback.textContent = message;
                    feedback.className = 'form-feedback error';
                }
            } else {
                field.classList.remove('valid', 'error');
                if (feedback) {
                    feedback.textContent = '';
                    feedback.className = 'form-feedback';
                }
            }
            
            return isValid;
        }

        // Aplicar validación a todos los campos
        const inputs = form.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
            input.addEventListener('blur', () => validateField(input));
            input.addEventListener('input', () => {
                if (input.classList.contains('error')) {
                    validateField(input);
                }
            });
            
            // Validación en tiempo real para campos de texto
            if (input.type === 'text' || input.type === 'tel' || input.type === 'number') {
                input.addEventListener('input', () => {
                    if (input.value.length > 0) {
                        validateField(input);
                    }
                });
            }
        });

        // Función para enviar datos a Supabase
        async function enviarCotizacion(datos) {
            try {
                const { data, error } = await supabase
                    .from('cotizacion')
                    .insert([
                        {
                            nombre: datos.nombre,
                            telefono: datos.telefono,
                            cantidad: datos.cantidad,
                            ciudad: datos.ciudad,
                            departamento: datos.departamento,
                            mensaje: datos.mensaje || null
                        }
                    ]);

                if (error) {
                    console.error('Error al guardar en Supabase:', error);
                    throw error;
                }

                console.log('Datos guardados exitosamente:', data);
                return { success: true, data };
            } catch (error) {
                console.error('Error en el envío:', error);
                return { success: false, error };
            }
        }

        // Enviar correo llamando a nuestro endpoint backend (sin servicios externos en el navegador)
        async function enviarNotificacionCorreo(datos) {
            try {
                const resp = await fetch('/api/send-email', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(datos)
                });
                const json = await resp.json();
                if (!resp.ok || !json?.ok) {
                    throw new Error(json?.error || 'Error enviando correo');
                }
                console.log('Correo enviado, id:', json.id);
                return { success: true };
            } catch (error) {
                console.error('Error al enviar notificación:', error);
                return { success: false, error };
            }
        }

        // Manejo del formulario mejorado
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Validar todos los campos
            let isFormValid = true;
            inputs.forEach(input => {
                if (!validateField(input)) {
                    isFormValid = false;
                }
            });
            
            if (!isFormValid) {
                // Scroll al primer campo con error
                const firstError = form.querySelector('.error');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstError.focus();
                }
                return;
            }
            
            // Mostrar estado de carga
            btnText.style.display = 'none';
            btnLoading.style.display = 'flex';
            submitBtn.disabled = true;
            
            try {
                // Recopilar datos del formulario
                const formData = new FormData(form);
                const datos = Object.fromEntries(formData);
                
                console.log('Enviando datos:', datos);
                
                // Enviar a Supabase
                const resultadoSupabase = await enviarCotizacion(datos);
                
                if (resultadoSupabase.success) {
                    // Enviar notificación por correo
                    await enviarNotificacionCorreo(datos);
                    
                    // Mostrar mensaje de éxito
                    form.style.display = 'none';
                    formSuccess.style.display = 'block';
                    
                    // Scroll al mensaje de éxito
                    setTimeout(() => {
                        formSuccess.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }, 100);
                    
                    // Auto-cerrar después de 8 segundos
                    setTimeout(() => {
                        closeModal();
                    }, 8000);
                } else {
                    throw new Error('Error al guardar en la base de datos');
                }
                
            } catch (error) {
                console.error('Error en el envío:', error);
                
                // Mostrar mensaje de error
                btnText.style.display = 'flex';
                btnLoading.style.display = 'none';
                submitBtn.disabled = false;
                
                // Mostrar alerta de error
                alert('Hubo un error al enviar tu solicitud. Por favor, inténtalo de nuevo o contacta directamente al +504 9999-9999');
            }
        });

        // Mejorar la experiencia de navegación con teclado
        inputs.forEach((input, index) => {
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && index < inputs.length - 1) {
                    e.preventDefault();
                    inputs[index + 1].focus();
                }
            });
        });

        // Animación de entrada para los campos
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        // Aplicar animación a los grupos de formulario
        const formGroups = form.querySelectorAll('.form-group');
        formGroups.forEach((group, index) => {
            group.style.opacity = '0';
            group.style.transform = 'translateY(20px)';
            group.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
            observer.observe(group);
        });
    });
</script>